{
  "name": "template-javascript",
  "version": "0.0.1",
  "description": "Javascript Project Template",
  "main": "dist/index.js",
  "scripts": {
    "build": "echo",
    "//prettier": "prettier \"{src,test}/**/*.{js,jsx}\"",
    "prettier": "prettier \"{src,test}/**/*.{ts,tsx}\"",
    "prettier:check": "npm run prettier -- --list-different",
    "prettier:write": "npm run prettier -- --write",
    "git-hook:pre-commit": "npm run prettier:write && npm run lint:write && npm run jscpd && npm run test",
    "//inspector": "jsinspector server --port 9543",
    "//jscpd": "jscpd ./src --blame --format javascript",
    "jscpd": "jscpd ./src --blame --format typescript",
    "jscpd:html": "npm run jscpd -- --reporters html",
    "//lint": "eslint ./{src,test}/**/*.{js,jsx}",
    "lint": "eslint ./{src,test}/**/*.{ts,tsx}",
    "lint:write": "npm run lint -- --fix",
    "lint:watch": "nodemon --exec \"npm run lint\"",
    "prerelease": "npm run build",
    "release": "release-it --ci --no-npm.publish",
    "//test": "nyc --extension .js mocha --forbid-only \"test/**/*.test.js\"",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "test:html": "nyc --reporter html --extension .js mocha --forbid-only \"test/**/*.test.js\"",
    "test:watch": "nodemon --exec \"npm run test\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dragoscirjan/template-javascript.git"
  },
  "author": "Dragos Cirjan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dragoscirjan/template-javascript/issues"
  },
  "homepage": "https://github.com/dragoscirjan/template-javascript#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "@babel/register": "^7.9.0",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-mocha": "^6.3.0",
    "jscpd": "^2.0.16",
    "jscpd-badge-reporter": "^1.1.3",
    "jsinspector": "^2.0.4",
    "mocha": "^7.1.2",
    "nodemon": "^2.0.3",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "release-it": "^13.5.8",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "npm run git-hook:pre-commit && git add ."
  }
}
